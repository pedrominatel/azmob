<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Menu Principal"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_connect"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt_title"
            android:contentDescription="Home"
            android:drawableLeft="@drawable/gear"
            android:onClick="connectBluetooth"
            android:text="@string/bt_connect" />

        <Button
            android:id="@+id/bt_reports"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt_title"
            android:contentDescription="Home"
            android:drawableLeft="@drawable/gear"
            android:onClick="todo"
            android:text="@string/bt_reports" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_engineering"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt_title"
            android:contentDescription="Home"
            android:drawableLeft="@drawable/gear"
            android:onClick="openReadouts"
            android:text="@string/engineering_mode" />

        <Button
            android:id="@+id/bt_exit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt_title"
            android:contentDescription="Home"
            android:drawableLeft="@drawable/gear"
            android:onClick="exit"
            android:text="@string/exit" />
    </LinearLayout>

</LinearLayout>