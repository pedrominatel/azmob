<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#be0000" />
            <stroke
                android:width="2dp"
                android:color="#570000" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#b40000"
                android:endColor="#8b0000"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#570000" />
            <corners
                android:radius="0dp" />

        </shape>
    </item>
</selector>