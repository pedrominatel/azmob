<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#3484cf" />
            <stroke
                android:width="1dp"
                android:color="#3490e5" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#0d5495"
                android:endColor="#277ac5"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#3490e5" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>
</selector>